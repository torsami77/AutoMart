{
  "name": "automart",
  "version": "1.0.0",
  "description": "Your Favourite platform to buy and sale vehicles...",
  "main": "./src/app.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-server",
    "start": "nodemon --exec babel-node ./build/app.js",
    "test": "nyc --reporter=html --reporter=text mocha --compilers js:babel-register --recursive ./test/",
    "babel-node": "babel-preset-env",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "heroku-postbuild": "npm install --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torsami77/AutoMart.git"
  },
  "keywords": [
    "buy",
    "sell",
    "bargain",
    "find",
    "vehicles",
    "cars",
    "auto",
    "mart"
  ],
  "author": "Samson Samuel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/torsami77/AutoMart/issues"
  },
  "homepage": "https://github.com/torsami77/AutoMart#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.0",
    "cookie-parser": "^1.4.3",
    "es6-promise": "^4.2.6",
    "event-stream": "^3.3.4",
    "express": "^4.16.4",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.4.0",
    "pg": "^7.7.0",
    "request": "^2.88.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "linebreak-style": 0
    }
  }
